@model AppUser
@{
    Layout=null;
}
<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <title>Sifre Yenileme</title>
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/assets/libs/toastr/build/toastr.min.css">

</head>

<body class="authentication-bg">
    <div class="account-pages my-5  pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
               
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div>
                        <div class="card">
                                
                            <div class="card-body p-4">

                                <div class="text-center mt-2">
                                    <h5 class="text-primary">Şifremi Unuttum</h5>
                                </div>
                                <div class="p-2 mt-4">
                                    <div class="alert alert-success text-center mb-4" role="alert">
                                        Şifrenizi yenilemek için Email adresinizi giriniz
                                    </div>
                                    <form asp-action="Password">

                                        <div class="mb-3">
                                            <label class="form-label" for="useremail">Email</label>
                                            <input asp-for="Email" type="email" class="form-control" id="useremail" placeholder="Email giriniz" required>
                                        </div>

                                        <div class="mt-3 text-end">
                                            <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Şifre Sıfırla</button>
                                        </div>


                                        <div class="mt-4 text-center">
                                            <p class="mb-0">Şifrenizi hatırladınız mı? <a asp-action="Login" asp-controller="User" class="fw-medium text-primary"> Giriş Yap </a></p>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
<!-- JAVASCRIPT -->
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>

    <!-- App js -->
    <!-- <script src="~/assets/js/app.js"></script> -->
    
</body>
</html>
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/toastr/build/toastr.min.js"></script>


<script>
    toastr.options = {
        "closeButton": true,
        "debug": false,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    }

    @if (TempData["error"] != null)
    {
        <text>
            toastr["error"]("@TempData["error"].ToString()");
        </text>
    }
    @if (TempData["success"] != null)
    {
        <text>
            toastr["success"]("@TempData["success"].ToString()");
        </text>
    }


</script>